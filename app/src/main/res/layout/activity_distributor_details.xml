<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="activity"
            type="in.forpay.activity.DistributorDetailsActivity" />
    </data>

    <ScrollView
        android:layout_alignParentTop="true"
        android:layout_above="@+id/scanbtn"
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".activity.DistributorDetailsActivity"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/LLdistributorName"
            android:layout_marginTop="@dimen/_15sdp"
            android:orientation="vertical">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/forpay"
                android:layout_marginStart="@dimen/_40sdp"
                android:layout_marginEnd="@dimen/_40sdp"/>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_margin="@dimen/_12sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_15sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/enterReferId"
                        android:fontFamily="@font/sf_regular"
                        android:layout_marginTop="@dimen/_25sdp"

                        android:textColor="@color/black"
                        android:background="@null"

                        android:textSize="@dimen/_14sdp"
                        android:textColorHint="@color/black"
                        />

                    <EditText

                        android:id="@+id/enterReferId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/enterReferId"
                        android:fontFamily="@font/sf_regular"
                        android:textSize="@dimen/_10sdp"

                        android:layout_marginTop="@dimen/_8sdp"
                        android:maxLength="7"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray_view"
                        android:layout_marginTop="@dimen/_8sdp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/distributorName"
                        android:fontFamily="@font/sf_regular"
                        android:layout_marginTop="@dimen/_25sdp"
                         android:textColor="@color/black"
                        android:background="@null"
                        android:textSize="@dimen/_14sdp"
                        android:textColorHint="@color/black"/>

                    <EditText
                        android:id="@+id/distributorName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/DistributorNameWillDisplayHere"
                        android:fontFamily="@font/sf_regular"
                        android:textColor="@color/black"
                        android:focusable="false"
                        android:textSize="@dimen/_10sdp"
                        android:inputType="none"
                        android:layout_marginTop="@dimen/_8sdp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray_view"
                        android:layout_marginTop="@dimen/_8sdp"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/distributorDistnce"
                        android:fontFamily="@font/sf_regular"
                        android:layout_marginTop="@dimen/_25sdp"
                        android:textColor="@color/black"
                        android:background="@null"

                        android:textSize="@dimen/_14sdp"
                        android:textColorHint="@color/black"/>

                    <EditText
                        android:id="@+id/distributorDistance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/DistributorDistanceWillDisplayHere"
                        android:fontFamily="@font/sf_regular"
                        android:textColor="@color/black"
                        android:background="@null"
                        android:focusable="false"
                        android:textSize="@dimen/_10sdp"
                        android:inputType="none"
                        android:layout_marginTop="@dimen/_8sdp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray_view"
                        android:layout_marginTop="@dimen/_8sdp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/resText"
                        android:textSize="@dimen/_20sdp"
                        android:fontFamily="@font/sf_bold"
                        android:gravity="center"
                        android:background="@drawable/white_less_corner_bg"
                        android:backgroundTint="@color/purple"
                        android:textColor="@color/white"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_22sdp"
                        android:layout_marginBottom="@dimen/_22sdp"
                        android:text=""
                        android:visibility="gone"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray_view"
                        android:layout_marginTop="@dimen/_8sdp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/continue_"
                        android:textSize="@dimen/_15sdp"
                        android:fontFamily="@font/sf_bold"
                        android:gravity="center"

                        android:background="@color/green_new"

                        android:textColor="@color/white"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_22sdp"
                        android:layout_marginBottom="@dimen/_22sdp"
                        android:id="@+id/continueBtn"/>



                </LinearLayout>

            </androidx.cardview.widget.CardView>





        </LinearLayout>


    </LinearLayout>
    </ScrollView>
</layout>