<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout
        android:layout_marginTop="@dimen/_6sdp"
        android:background="@drawable/gray_border2"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/top_menu"
            android:paddingTop="@dimen/_10sdp"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_toStartOf="@id/txt_amount"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/txt_order_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/order_id_12121"
                    android:textStyle="bold"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/green_new"
                    android:fontFamily="sans-serif"/>

                <TextView
                    android:id="@+id/txt_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/_2020_03_01_23_59_59"
                    android:textSize="@dimen/_11sdp"
                    android:textColor="@color/green_new"
                    android:fontFamily="sans-serif"/>

            </LinearLayout>


            <TextView
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rs_100"
                android:id="@+id/txt_amount"
                android:textColor="@color/green_new"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:textSize="@dimen/_16sdp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginBottom="@dimen/_10sdp"
            android:paddingStart="@dimen/_5sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/_38sdp"
                android:layout_height="@dimen/_38sdp"
                android:src="@drawable/icon_place_holder"
                android:layerType="software"
                android:id="@+id/recent_icon"/>

            <TextView
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/btn_repeat"
                android:layout_toEndOf="@id/recent_icon"
                android:id="@+id/transaction_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/your_order_successfull"
                android:textStyle="bold"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/green"
                android:fontFamily="sans-serif"/>

            <LinearLayout
                android:gravity="end"
                android:layout_alignParentEnd="true"
                android:id="@+id/btn_repeat"
                android:background="@drawable/white_less_corner_bg"
                android:backgroundTint="@color/orange_new"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true">

                <TextView
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/repeat"
                    android:textStyle="bold"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/white"
                    android:fontFamily="sans-serif"/>


            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
</layout>
