<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout
       android:padding="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:background="@drawable/gray_border2"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_imei"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textStyle="bold"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/green_new"
                        android:fontFamily="sans-serif"/>

                    <LinearLayout
                        android:layout_gravity="bottom"
                        android:gravity="end"
                        android:id="@+id/btnLogout"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_marginStart="@dimen/_3sdp"
                            android:id="@+id/btnLogoutText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/logout"
                            android:textSize="@dimen/_14sdp"
                            android:paddingStart="@dimen/_9sdp"
                            android:paddingEnd="@dimen/_9sdp"
                            android:paddingTop="@dimen/_4sdp"
                            android:paddingBottom="@dimen/_4sdp"
                            android:textColor="@color/white"
                            android:background="@drawable/orange_round_border"
                            android:backgroundTint="@color/orange_new"
                            android:fontFamily="sans-serif"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/last"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        android:fontFamily="sans-serif"/>

                    <TextView
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/active"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/_13sdp"
                        android:fontFamily="sans-serif"/>

                </LinearLayout>

                <TextView
                    android:layout_marginTop="@dimen/_2sdp"
                    android:id="@+id/txt_last_active"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/_00_00_00_00_00"
                    android:textColor="@color/orange_new"
                    android:fontFamily="sans-serif"
                    android:textSize="@dimen/_12sdp"/>

            </LinearLayout>

           <!-- <ImageView
                android:layout_margin="@dimen/_5sdp"
                android:layout_alignParentEnd="true"
                android:layout_width="@dimen/_38sdp"
                android:layout_height="@dimen/_38sdp"
                android:src="@drawable/ic_phone"
                android:layerType="software"
                android:id="@+id/recent_icon"/>
-->




        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:gravity="bottom"
            android:layout_marginStart="@dimen/_5sdp"
            android:id="@+id/top_menu"
            android:paddingTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Login"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:fontFamily="sans-serif"/>

                <TextView
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Time"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_13sdp"
                    android:fontFamily="sans-serif"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_marginTop="@dimen/_2sdp"
                    android:id="@+id/txt_login_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/_00_00_00_00_00"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/orange_new"
                    android:fontFamily="sans-serif"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</layout>
