<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="activity"
            type="in.forpay.activity.DoYouHaveShopActivity" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".activity.DoYouHaveShopActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/LLDoYouHaveShop"
            android:layout_marginTop="@dimen/_15sdp"
            android:orientation="vertical">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/forpay"
                android:layout_marginStart="@dimen/_40sdp"
                android:layout_marginEnd="@dimen/_40sdp"/>

            <TextView
                android:textStyle="bold"
                android:fontFamily="@font/poppins_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_30sdp"

                android:background="@drawable/aqua_btn"

                android:gravity="center"
                android:id="@+id/doYouHaveShop"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:text="@string/doYouHaveShop"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <TextView
                android:textStyle="bold"
                android:fontFamily="@font/poppins_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/_70sdp"
                android:layout_marginStart="@dimen/_70sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:background="@color/green"
                android:gravity="center"
                android:id="@+id/customerShopYes"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:text="@string/yes"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <TextView
                android:textStyle="bold"
                android:fontFamily="@font/poppins_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/_70sdp"
                android:layout_marginStart="@dimen/_70sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:background="@color/red"
                android:gravity="center"
                android:id="@+id/customerShopNo"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:text="@string/no"
                android:textColor="@color/white"
                android:textSize="16dp" />



        </LinearLayout>


    </LinearLayout>
</layout>