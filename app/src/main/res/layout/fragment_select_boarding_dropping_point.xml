<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="SelectBoardingDroppingPoint"
            type="in.forpay.fragment.busbookingfragment.SelectBoardingDroppingPoint" />

    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:focusable="true"
        android:clickable="true"
        android:background="@color/white"
        tools:context=".fragment.busbookingfragment.SelectBoardingDroppingPoint">



        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="@dimen/_43sdp"
            >



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/imgBack"
                    android:layout_width="@dimen/_23sdp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/back_arrow"
                    android:layout_height="@dimen/_23sdp"/>



                <TextView
                    android:lines="1"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:textSize="@dimen/_14sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_width="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:textColor="@color/green_new"
                    android:text="@string/choose_boarding_dropping_point"/>
            </LinearLayout>


        </androidx.appcompat.widget.Toolbar>



        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="0dp"
            android:layout_weight="1">

            <com.google.android.material.tabs.TabLayout
                android:background="@color/white"
                android:id="@+id/tabBoardingDropping"
                android:layout_width="match_parent"
                app:tabIndicatorColor="@color/orange_new"
                app:tabIndicatorHeight="@dimen/_1sdp"
                app:tabTextColor="@color/black"
                app:tabMode="fixed"
                app:tabTextAppearance="@style/TextAppearance.AppCompat.Small"
                android:layout_height="@dimen/_35sdp"/>


            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewPagerBoardingDropping"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>


        <TextView
            android:fontFamily="@font/poppins_regular"
            android:id="@+id/txtContinue"
            android:layout_width="match_parent"
            android:text="@string/title_continue"
            android:textColor="@color/white"
            android:gravity="center"
            android:textAllCaps="true"
            android:textSize="@dimen/_11sdp"
            android:textStyle="bold"
            android:background="@color/orange_new"
            android:layout_height="@dimen/_35sdp"/>


    </LinearLayout>

</layout>

