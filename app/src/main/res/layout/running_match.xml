<!--                    android:layout_marginHorizontal="@dimen/_10sdp"-->
<!--                    android:background="@drawable/cb_shape_oval"-->
<!--                    android:gravity="center_horizontal"-->
<!--                    android:padding="@dimen/_5sdp"-->
