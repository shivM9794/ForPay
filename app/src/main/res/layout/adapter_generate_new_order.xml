<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_corner_shadow"
            android:layout_marginTop="@dimen/_10sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/_5sdp"
                android:paddingEnd="@dimen/_15sdp"
                android:paddingTop="@dimen/_25sdp"
                android:paddingBottom="@dimen/_25sdp">

                <EditText
                    android:id="@+id/itemName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Item Name"
                    android:textColor="@color/black"
                    android:fontFamily="@font/sf_regular"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:background="@null"
                    android:textCursorDrawable="@null"
                    android:layout_toStartOf="@id/subtract"/>

                <ImageView
                    android:id="@+id/subtract"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_toStartOf="@id/quantity"
                    android:padding="@dimen/_3sdp"
                    android:src="@drawable/subtract" />

                <TextView
                    android:id="@+id/quantity"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:text="0"
                    android:textSize="@dimen/_12sdp"
                    android:fontFamily="@font/sf_regular"
                    android:gravity="center"
                    android:background="@drawable/purple_square_border_bg"
                    android:layout_toStartOf="@id/add"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_5sdp"/>

                <ImageView
                    android:id="@+id/add"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/add_quantity"
                    android:layout_toStartOf="@id/rs"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:padding="@dimen/_5sdp"/>

                <TextView
                    android:id="@+id/rs"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_20sdp"
                    android:text="Rs"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/sf_regular"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/price"
                    android:layout_marginEnd="@dimen/_3sdp"/>

                <EditText
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="@dimen/_30sdp"
                    android:hint="00"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textColorHint="@color/gray_shop"
                    android:textSize="@dimen/_14sdp"
                    android:fontFamily="@font/sf_regular"
                    android:layout_alignParentEnd="true"
                    android:background="@null"
                    android:inputType="number"
                    android:textCursorDrawable="@null"
                    android:layout_centerVertical="true" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/remove"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:src="@drawable/remove"
                android:layout_alignParentEnd="true"
                android:layout_margin="@dimen/_5sdp"/>

        </RelativeLayout>

    </LinearLayout>

</layout>