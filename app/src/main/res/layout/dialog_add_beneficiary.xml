<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="@dimen/_10sdp">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gray_border"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp">

                <TextView
                    android:fontFamily="@font/poppins_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="@string/title_add_beneficiary"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16dp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:padding="@dimen/_1sdp"
                        android:layout_width="@dimen/_23sdp"
                        android:layout_height="@dimen/_23sdp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/ic_recharge3"
                        />

                    <EditText
                        android:background="@color/white"
                        android:fontFamily="@font/poppins_regular"
                        android:id="@+id/editTextMobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        style="@style/etStyleRegular"
                        android:padding="@dimen/_10sdp"
                        android:textColor="@color/dark_text"
                        android:lines="1"
                        android:hint="@string/hint_enter_mobile"
                        />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="@color/gray_new" />

                <LinearLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:padding="@dimen/_1sdp"
                        android:layout_width="@dimen/_23sdp"
                        android:layout_height="@dimen/_23sdp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/acount_no_ico"
                        />

                    <EditText
                        android:background="@color/white"
                        android:fontFamily="@font/poppins_regular"
                        android:id="@+id/editTextAccountNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        style="@style/etStyleRegular"
                        android:padding="@dimen/_10sdp"
                        android:textColor="@color/dark_text"
                        android:lines="1"
                        android:hint="@string/title_account_number"
                        />




                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="@color/gray_new" />

                <LinearLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:padding="@dimen/_1sdp"
                        android:layout_width="@dimen/_23sdp"
                        android:layout_height="@dimen/_23sdp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/ifsc_ico"
                        />

                    <EditText
                        android:background="@color/white"
                        android:fontFamily="@font/poppins_regular"
                        android:id="@+id/editTextIfscCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        style="@style/etStyleRegular"
                        android:padding="@dimen/_10sdp"
                        android:textColor="@color/dark_text"
                        android:lines="1"
                        android:hint="@string/title_ifsc_code"
                        />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="@color/gray_new" />

                <LinearLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:padding="@dimen/_1sdp"
                        android:layout_width="@dimen/_23sdp"
                        android:layout_height="@dimen/_23sdp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/ic_user2"
                        />

                    <EditText
                        android:background="@color/white"
                        android:fontFamily="@font/poppins_regular"
                        android:id="@+id/editTextAccountName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        style="@style/etStyleRegular"
                        android:padding="@dimen/_10sdp"
                        android:textColor="@color/dark_text"
                        android:lines="1"
                        android:hint="@string/title_account_name"
                        android:layout_weight="1"
                        />

                    <TextView
                        android:id="@+id/textViewVerifyNow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:drawablePadding="5dp"
                        android:background="@drawable/dark_aqua_btn"
                        android:drawableTint="@color/green_new"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:padding="8dp"
                        android:text="Check Name"

                        android:textSize="12dp"
                        android:visibility="visible" />

                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="@color/gray_new" />

                <LinearLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:padding="@dimen/_3sdp"
                        android:layout_width="@dimen/_23sdp"
                        android:layout_height="@dimen/_23sdp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/lock_key"
                        />

                    <EditText
                        android:background="@color/white"
                        android:fontFamily="@font/poppins_regular"
                        android:id="@+id/editTextPin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberPassword"
                        style="@style/etStyleRegular"
                        android:padding="@dimen/_10sdp"
                        android:textColor="@color/dark_text"
                        android:lines="1"
                        android:hint="@string/error_enter_pin"
                        />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="@color/gray_new" />

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/otp_layout"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        app:tint="@color/light_green"
                        android:padding="@dimen/_3sdp"
                        android:layout_width="@dimen/_23sdp"
                        android:layout_height="@dimen/_23sdp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/ic_check"
                        />

                    <EditText
                        android:background="@color/white"
                        android:fontFamily="@font/poppins_regular"
                        android:id="@+id/editTextOTP"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        style="@style/etStyleRegular"
                        android:padding="@dimen/_10sdp"
                        android:textColor="@color/dark_text"
                        android:lines="1"
                        android:hint="Enter OTP"
                        />


                </LinearLayout>

                <View
                    android:id="@+id/viewLineOTP"
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="@color/gray_new"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewAddNow"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/aqua_btn"
                        android:paddingBottom="@dimen/_6sdp"
                        android:paddingEnd="@dimen/_25sdp"
                        android:paddingStart="@dimen/_25sdp"
                        android:paddingTop="@dimen/_6sdp"
                        android:text="@string/title_add_now"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10sdp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>


    </androidx.cardview.widget.CardView>

</RelativeLayout>