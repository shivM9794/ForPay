<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView

        android:id="@+id/scrollview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >

    <RelativeLayout
            android:id="@+id/fund_layout"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"
                android:id="@+id/appbar_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_43sdp"
                android:orientation="horizontal"
                android:background="@color/green_new">

                <ImageView
                    android:layout_marginStart="@dimen/_10sdp"
                    android:id="@+id/back_btn"
                    android:layout_width="@dimen/_23sdp"
                    android:layout_height="@dimen/_23sdp"
                    android:src="@drawable/back_arrow"
                    android:layout_centerVertical="true"
                    android:layerType="software"
                    app:tint="@color/white" />

                <TextView
                    android:paddingBottom="1dp"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BBPS Complaints"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_gravity="center_vertical"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:textSize="@dimen/_15sdp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/white"
                    />

                <ImageView
                    android:id="@+id/btn_history"
                    android:layout_width="@dimen/_63sdp"
                    android:layout_height="@dimen/_23sdp"
                    app:srcCompat="@drawable/bbps"

                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/_10sdp"/>


            </RelativeLayout>

                <LinearLayout
                    android:layout_centerInParent="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <FrameLayout
                        android:layout_marginTop="@dimen/_70sdp"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                        <TextView
                            android:paddingTop="@dimen/_24sdp"
                            android:background="@drawable/circular_btn_orange_3d"
                            android:id="@+id/btn_new_complaint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="NEW COMPLAIN"
                            android:fontFamily="@font/poppins_bold"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold" />

                        <ImageView
                            app:tint="@color/white"
                            android:layout_marginTop="@dimen/_36sdp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/ic_baseline_warning_24"
                            android:layout_width="@dimen/_42sdp"
                            android:layout_height="@dimen/_42sdp"/>

                    </FrameLayout>


                    <FrameLayout
                        android:layout_marginTop="@dimen/_26sdp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/btn_check_status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/circular_btn_green_3d"
                            android:gravity="center"
                            android:fontFamily="@font/poppins_bold"
                            android:text="COMPLAINT STATUS"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp"
                            android:paddingTop="@dimen/_24sdp"
                            android:textStyle="bold" />

                        <ImageView
                            app:tint="@color/white"
                            android:layout_marginTop="@dimen/_36sdp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/ic_complain_status"
                            android:layout_width="@dimen/_42sdp"
                            android:layout_height="@dimen/_42sdp"/>


                    </FrameLayout>

                    <FrameLayout
                        android:layout_marginTop="@dimen/_26sdp"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                        <TextView
                            android:paddingTop="@dimen/_24sdp"
                            android:background="@drawable/circular_btn_orange_3d"
                            android:id="@+id/btn_search_transaction"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="SEARCH TRANS..."
                            android:fontFamily="@font/poppins_bold"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold" />

                        <ImageView
                            app:tint="@color/white"
                            android:layout_marginTop="@dimen/_36sdp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/ic_baseline_warning_24"
                            android:layout_width="@dimen/_42sdp"
                            android:layout_height="@dimen/_42sdp"/>

                    </FrameLayout>


                </LinearLayout>


        </RelativeLayout>

    </ScrollView>
</layout>
