<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@drawable/gray_border3"
        android:padding="0.5dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:background="@drawable/primary_half_roundtop"
            android:id="@+id/top_menu"
            android:paddingTop="@dimen/_6sdp"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:paddingBottom="@dimen/_6sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_profit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/txt_paidAmount"
                android:fontFamily="sans-serif"
                android:text="Profit Rs."
                android:textColor="@color/white"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold" />

            <TextView
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/paid_amount"
                android:id="@+id/txt_paidAmount"
                android:textColor="@color/white"
                android:fontFamily="sans-serif"
                android:textSize="@dimen/_14sdp"/>

        </RelativeLayout>

        <RelativeLayout
            android:paddingStart="@dimen/_5sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_bottom_corner_bg">

            <LinearLayout
                android:layout_toStartOf="@id/profit_data"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginBottom="@dimen/_7sdp"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/transaction_success"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Success 0"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:paddingTop="@dimen/_3sdp"
                    android:paddingBottom="@dimen/_3sdp"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif"/>

                <TextView

                    android:id="@+id/transaction_pending"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/pending"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:paddingTop="@dimen/_3sdp"
                    android:paddingBottom="@dimen/_3sdp"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif"/>

            </LinearLayout>

            <LinearLayout
                android:gravity="end"
                android:layout_alignParentEnd="true"
                android:id="@+id/profit_data"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginBottom="@dimen/_7sdp"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/transaction_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0000-00-00"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/gray"
                    android:fontFamily="sans-serif"/>

                <TextView
                    android:id="@+id/transaction_disputed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/disputed"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:paddingTop="@dimen/_3sdp"
                    android:paddingBottom="@dimen/_3sdp"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/gray"
                    android:fontFamily="sans-serif"/>

            </LinearLayout>

        </RelativeLayout>



      <!--  <View
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_9sdp"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/gray_new"/>-->
    </LinearLayout>
</layout>
