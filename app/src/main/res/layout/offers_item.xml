<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardView"
    android:background="@drawable/gray_border2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_10sdp"
    android:layout_marginEnd="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_10sdp"
    android:orientation="vertical"
    android:padding="@dimen/_12sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:fontFamily="@font/poppins_bold"
            android:paddingStart="@dimen/_20sdp"
            android:paddingEnd="@dimen/_20sdp"
            android:paddingTop="@dimen/_3sdp"
            android:paddingBottom="@dimen/_3sdp"
            android:background="@drawable/round_light_back"
            android:backgroundTint="@color/orange_new"
            android:id="@+id/textViewAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/_10_rs"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold" />


        <TextView
            android:textAlignment="textEnd"
            android:layout_toEndOf="@id/textViewAmount"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:fontFamily="sans-serif"
            android:paddingStart="@dimen/_20sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:id="@+id/textData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="@string/data_1_gb_per_day"
            android:textColor="@color/green_new"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold" />


    </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:fontFamily="sans-serif"
                android:id="@+id/textViewDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/dark_text"
                android:textSize="@dimen/_10sdp" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="start"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/textViewValidity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text=""
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
                    android:textSize="@dimen/_11sdp" />


                <LinearLayout
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:padding="5dp"
                    android:gravity="center"
                    android:background="@drawable/white_border_bg"
                    android:backgroundTint="@color/green_new"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:src="@drawable/coin"
                        android:padding="4dp"
                        />

                    <TextView
                        android:id="@+id/commissiontv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 + 0"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="14dp" />


                </LinearLayout>




            </RelativeLayout>


        </LinearLayout>
    </LinearLayout>