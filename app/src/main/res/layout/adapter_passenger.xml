<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="AdapterPassenger"
            type="in.forpay.adapter.busbookingadapter.PassengerAdapter" />
    </data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:visibility="visible"
                android:id="@+id/linAddTravellersView"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="0dp"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:padding="@dimen/_5sdp"
                    app:srcCompat="@drawable/ic_person_add"
                    app:tint="@color/green_new" />

                <TextView
                    android:fontFamily="@font/poppins_regular"
                    android:id="@+id/txtAddTravellers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/green_new"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_gravity="center_vertical"
                    android:text="Add Travellers"/>



            </LinearLayout>

            <LinearLayout
                android:id="@+id/linPassengerDetailFillView"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="@dimen/_30sdp"
                android:weightSum="3">

                <TextView
                    android:fontFamily="@font/poppins_regular"
                    android:id="@+id/txtPassengerName"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/app_name"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:fontFamily="@font/poppins_regular"
                    android:id="@+id/txtSeatNumber"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Seat 27"
                    android:textColor="@color/black"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"/>



                <TextView
                    android:fontFamily="@font/poppins_regular"
                    android:id="@+id/txtChange"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:paddingEnd="@dimen/_10sdp"
                    android:text="Change"
                    android:textStyle="bold"
                    android:paddingStart="@dimen/_10sdp"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"/>


            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>
</layout>
