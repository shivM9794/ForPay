<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/orange_new</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:spinnerStyle">@style/spinner_style</item>

    </style>

    <style name="spinner_style" parent="Widget.AppCompat.Spinner.Underlined">

    </style>


    <style name="AddKyc" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/green_new</item>
        <item name="colorPrimaryDark">@color/green_new</item>
        <item name="colorAccent">@color/orange_new</item>
        <!-- Customize your theme here. -->
<!--        <item name="colorPrimary">@color/white</item>-->
<!--        <item name="colorPrimaryDark">@color/white</item>-->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">true</item>
        <item name="android:windowLightStatusBar">true</item>

    </style>

    <style name="ShopTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/gray_bg_shop</item>
        <item name="colorPrimaryDark">@color/gray_bg_shop</item>
        <item name="colorAccent">@color/Black</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">true</item>
        <item name="android:windowLightStatusBar">true</item>

    </style>

    <style name="tvStyleSemibold" parent="@android:style/Theme">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/tv_welcome_color</item>
        <item name="android:fontFamily">@fonts/TxtSemibold.ttf</item>
    </style>

    <style name="commonStyleBottomBtnBlue" parent="@style/Theme.AppCompat.Light">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/et_selected_color</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:foreground">?android:selectableItemBackground</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@fonts/TxtSemibold.ttf</item>
    </style>


    <style name="etStyleRegular" parent="@style/Widget.Design.TextInputLayout">
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/tv_not_registered</item>
        <item name="android:background">@drawable/edt_bg_selector</item>
        <item name="android:paddingLeft">@dimen/_2sdp</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingRight">@dimen/_2sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>

        <item name="colorAccent">@color/et_selected_color</item>
        <item name="colorControlNormal">@color/et_selected_color</item>

    </style>

    <style name="TextLabel" parent="Theme.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:inputType">text</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/gray</item>
    </style>

    <style name="RedAccent" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="DatePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="DatePickerDialogThemeBalance" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/green_balance</item>
    </style>

    <style name="tvStyleRegular">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/tv_welcome_color</item>

    </style>

    <style name="semibolidGrey12">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/hint_color</item>

    </style>

    <style name="NavigationMenu" parent="Widget.Design.NavigationView">

    </style>

    <style name="Progress" parent="Widget.AppCompat.ProgressBar">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="shopRatingBar" parent="android:style/Widget.Material.RatingBar.Small">
        <item name="android:progressDrawable">@drawable/shop_rating_bar_full</item>
    </style>

    <style name="shopRating" parent="android:style/Widget.Material.RatingBar.Small">
        <item name="android:progressDrawable">@drawable/rating_bar_bg</item>
        <item name="android:minHeight">19dip</item>
        <item name="android:maxHeight">19dip</item>
    </style>

    <style name="MySeekBar2" parent="Widget.AppCompat.SeekBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:progressBackgroundTint" tools:ignore="NewApi">@color/black</item>

    </style>

    <style name="MySeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:progressBackgroundTint" tools:ignore="NewApi">@color/white</item>

    </style>


    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/out_to_top</item>
    </style>

    <style name="DialogKyc" parent="Theme.AppCompat.Light.NoActionBar">

            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">fill_parent</item>
            <!-- No backgrounds, titles or window float -->

            <item name="android:windowNoTitle">true</item>
            <item name="android:windowIsFloating">false</item>
        <item name="android:layout_marginStart">@dimen/_10sdp</item>
        <item name="android:layout_marginEnd">@dimen/_10sdp</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
        <item name="android:layout_marginBottom">@dimen/_5sdp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardCornerRadius">@dimen/_10sdp</item>







    </style>


    <style name="DialogSlideAnim" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
    </style>

    <style name="titleBarHeading" parent="@android:style/TextAppearance">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#444444</item>
    </style>


    <style name="text_Label" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">13sp</item>
    </style>

<!--    Bottom Style Sheet for Buy TShirt-->

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>

    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/white</item>


    </style>

</resources>
