<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginBottom="@dimen/_7sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/shopName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Bean and leaf"
                            android:textSize="@dimen/_16sdp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/sf_bold"
                            android:gravity="bottom"
                            android:singleLine="true"
                            android:layout_toStartOf="@id/timeLayout"
                            android:layout_alignBottom="@id/timeLayout"
                            android:layout_marginBottom="-3dp"/>

                        <LinearLayout
                            android:id="@+id/timeLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Avg.Delivery time"
                                android:textSize="@dimen/_10sdp"
                                android:textColor="@color/gray_shop"
                                android:fontFamily="@font/sf_regular"
                                android:layout_marginTop="@dimen/_8sdp"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/deliveryTime"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="4 Hours"
                                    android:textSize="@dimen/_10sdp"
                                    android:textColor="@color/black"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/sf_regular"
                                    android:layout_marginEnd="@dimen/_5sdp"/>

                                <ImageView
                                    android:layout_width="@dimen/_15sdp"
                                    android:layout_height="@dimen/_15sdp"
                                    android:src="@drawable/time"/>

                            </LinearLayout>


                        </LinearLayout>

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bolshoy coffee, almond coffee and you can take more flawer..."
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/gray_shop"
                        android:fontFamily="@font/sf_regular"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_alignParentEnd="true"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/gray_view"
                    android:layout_marginTop="@dimen/_10sdp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/square_shop"
                            android:layout_gravity="center"/>

                        <TextView
                            android:id="@+id/category"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Coffee Shop"
                            android:textSize="@dimen/_11sdp"
                            android:fontFamily="@font/sf_regular"
                            android:layout_alignParentEnd="true"
                            android:singleLine="true"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/_3sdp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ratingLayout"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/rate_us"
                            android:layout_gravity="center"/>

                        <TextView
                            android:id="@+id/rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.5"
                            android:textSize="@dimen/_11sdp"
                            android:fontFamily="@font/sf_regular"
                            android:layout_alignParentEnd="true"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/_3sdp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rating"
                            android:textSize="@dimen/_11sdp"
                            android:fontFamily="@font/sf_regular"
                            android:layout_alignParentEnd="true"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/_4sdp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/distanceLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/location_gray"
                            android:layout_gravity="center"/>

                        <TextView
                            android:id="@+id/distance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="30M"
                            android:textSize="@dimen/_11sdp"
                            android:fontFamily="@font/sf_regular"
                            android:layout_alignParentEnd="true"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/_3sdp"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</layout>