<?xml version="1.0" encoding="utf-8"?>
<layout>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/linSeatItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/whiterectangle2"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">

        <ImageView
            android:id="@+id/img_cancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_90sdp"
            android:layout_centerVertical="true"
            android:alpha="0.8"
            android:src="@drawable/cancle_watermark"
            android:visibility="gone" />


        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="start"
                    android:text="Name"
                    android:textColor="@color/comfort_default"
                    android:textSize="@dimen/_10sdp" />


                <TextView
                    android:id="@+id/txtPassengerName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="@color/view" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:scrollbars="none">

                <RelativeLayout
                    android:layout_width="@dimen/_280sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="@dimen/_280sdp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <in.forpay.customfonts.MyTextViewBold
                                android:id="@+id/busDepartureTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:fontFamily="@font/poppins_regular"
                                android:text="Age"
                                android:textColor="@color/comfort_default"
                                android:textSize="@dimen/_10sdp"
                                android:textStyle="normal" />

                            <TextView
                                android:id="@+id/txtPassengerAge"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/sf_bold"
                                android:text="22"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_13sdp" />
                        </LinearLayout>

                        <View
                            android:layout_width="0.8dp"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_marginHorizontal="@dimen/_5sdp"
                            android:background="@color/view" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <in.forpay.customfonts.MyTextViewBold
                                android:id="@+id/txtGender"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:fontFamily="@font/sf_bold"
                                android:text="Gender"
                                android:textColor="@color/comfort_default"
                                android:textSize="@dimen/_10sdp"
                                android:textStyle="normal"/>

                            <TextView
                                android:id="@+id/txtPassengerGender"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/sf_bold"
                                android:text="M"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_13sdp"/>

                        </LinearLayout>

                        <View
                            android:layout_width="0.8dp"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_marginHorizontal="@dimen/_5sdp"
                            android:background="@color/view"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <in.forpay.customfonts.MyTextViewBold
                                android:id="@+id/busArrivalTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:fontFamily="@font/sf_bold"
                                android:text="Seat"
                                android:textColor="@color/comfort_default"
                                android:textSize="@dimen/_10sdp"
                                android:textStyle="normal" />

                            <TextView
                                android:id="@+id/txtPassengerSeat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/sf_bold"
                                android:text="11"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_13sdp" />
                        </LinearLayout>

                        <View
                            android:layout_width="0.8dp"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_marginHorizontal="@dimen/_5sdp"
                            android:background="@color/view" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <in.forpay.customfonts.MyTextViewBold
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:fontFamily="@font/poppins_regular"
                                android:text="Amount"
                                android:textColor="@color/comfort_default"
                                android:textSize="@dimen/_10sdp"
                                android:textStyle="normal" />

                            <TextView
                                android:id="@+id/txtAmount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/sf_bold"
                                android:text="22"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_13sdp" />
                        </LinearLayout>

                        <View
                            android:id="@+id/line_cancel"
                            android:layout_width="0.8dp"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_marginHorizontal="@dimen/_5sdp"
                            android:background="@color/view" />

                        <LinearLayout
                            android:id="@+id/ll_Cancel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <in.forpay.customfonts.MyTextViewBold
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:fontFamily="@font/poppins_regular"
                                android:text="Cancel"
                                android:textColor="@color/comfort_default"
                                android:textSize="@dimen/_10sdp"
                                android:textStyle="normal"
                                android:visibility="gone" />

                            <CheckBox
                                android:id="@+id/checkBoxSelectItem"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text=" " />
                        </LinearLayout>


                    </LinearLayout>

                </RelativeLayout>
            </HorizontalScrollView>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:background="@color/view" />


        </LinearLayout>


    </RelativeLayout>


</layout>
