<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:fontFamily="@font/poppins_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_id"
                android:textColor="@color/dark_text"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold" />

            <TextView
                android:fontFamily="@font/poppins_regular"
                android:id="@+id/textViewId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:text=""
                android:textColor="@color/dark_text"
                android:textSize="@dimen/_10sdp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:fontFamily="@font/poppins_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_account_name"
                android:textColor="@color/dark_text"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold" />

            <TextView
                android:fontFamily="@font/poppins_regular"
                android:id="@+id/textViewName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:text=""
                android:textColor="@color/dark_text"
                android:textSize="@dimen/_10sdp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:fontFamily="@font/poppins_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_mobile"
                android:textColor="@color/dark_text"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold" />

            <TextView
                android:fontFamily="@font/poppins_regular"
                android:id="@+id/textViewMobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:text=""
                android:textColor="@color/dark_text"
                android:textSize="@dimen/_10sdp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:fontFamily="@font/poppins_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_account_number"
                android:textColor="@color/dark_text"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold" />

            <TextView
                android:fontFamily="@font/poppins_regular"
                android:id="@+id/textViewAccountNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:text=""
                android:textColor="@color/dark_text"
                android:textSize="@dimen/_10sdp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:fontFamily="@font/poppins_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_ifsc_code"
                android:textColor="@color/dark_text"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold" />

            <TextView
                android:fontFamily="@font/poppins_regular"
                android:id="@+id/textViewIFSCCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:text=""
                android:textColor="@color/dark_text"
                android:textSize="@dimen/_10sdp" />
        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>