<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_marginEnd="@dimen/_10sdp"
    android:background="@drawable/gray_border2"
    android:orientation="vertical"
    android:padding="@dimen/_12sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_View_Amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/round_light_back"
            android:backgroundTint="@color/orange_new"
            android:fontFamily="@font/poppins_bold"
            android:paddingStart="@dimen/_20sdp"
            android:paddingTop="@dimen/_3sdp"
            android:paddingEnd="@dimen/_20sdp"
            android:paddingBottom="@dimen/_3sdp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/text_Validity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_toEndOf="@id/text_View_Amount"
            android:fontFamily="sans-serif"
            android:paddingStart="@dimen/_20sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:text=""
            android:textAlignment="textEnd"
            android:textColor="@color/green_new"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            tools:ignore="RtlSymmetry" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_6sdp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_View_Detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text=""
            android:textColor="@color/dark_text"
            android:textSize="@dimen/_10sdp" />



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_Coupon_name"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="sans-serif"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp"
                android:textStyle="bold"


                />


            <TextView
                android:id="@+id/convertToPoints"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentEnd="true"
                android:layout_gravity="end"
                android:layout_marginStart="@dimen/_10sdp"

                android:background="@drawable/round_light_back"
                android:backgroundTint="@color/green_new"
                android:fontFamily="sans-serif"
                android:paddingStart="@dimen/_3sdp"
                android:paddingTop="@dimen/_3sdp"
                android:paddingEnd="@dimen/_3sdp"
                android:paddingBottom="@dimen/_3sdp"
                android:text="Convert To Points"
                android:textAlignment="textEnd"
                android:textColor="@color/white"
                android:textSize="@dimen/_9sdp"
                android:textStyle="bold"
                tools:ignore="RtlSymmetry" />


        </RelativeLayout>



    </LinearLayout>
</LinearLayout>