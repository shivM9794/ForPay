<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="activity"
            type="in.forpay.activity.AddFundNewActivity" />
    </data>


    <LinearLayout
        android:id="@+id/layout_fund"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/green_new">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/textViewBack"
                        android:layout_width="@dimen/_23sdp"
                        android:layout_height="@dimen/_23sdp"
                        android:layout_marginTop="15dp"
                        android:layerType="software"
                        android:src="@drawable/back_arrow"
                        app:tint="@color/white" />

                    <TextView
                        android:id="@+id/txt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:layout_weight="3"
                        android:fontFamily="@font/poppins_bold"
                        android:gravity="center"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:paddingBottom="1dp"
                        android:text="@string/title_payment"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_15sdp" />


                    <ImageView
                        android:id="@+id/bbps_icon"
                        android:layout_width="30dp"
                        android:layout_height="@dimen/_45sdp"
                        android:layout_gravity="end"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:src="@drawable/question_mark"
                        app:tint="@color/white" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_marginEnd="20dp"
                            android:backgroundTint="#3CB371"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <in.forpay.customfonts.MyTextView_Roboto_Bold
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/poppins_regular"
                                    android:text="@string/title_available_balance"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_12sdp"
                                    android:textStyle="bold" />

                                <ImageView
                                    android:layout_width="60dp"
                                    android:layout_height="25dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginEnd="20dp"
                                    android:src="@drawable/ic_wallet1" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <in.forpay.customfonts.MyTextView_Roboto_Bold
                                    android:id="@+id/textViewBalance"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginTop="40dp"
                                    android:fontFamily="@font/poppins_regular"
                                    android:text="₹"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_22sdp"
                                    android:textStyle="bold" />

                            </LinearLayout>


                        </androidx.cardview.widget.CardView>
                    </LinearLayout>


                </RelativeLayout>

            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

        <RelativeLayout
            android:id="@+id/relativelayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-10dp"
            android:background="@drawable/rounded_relativelayout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <in.forpay.customfonts.MyTextView_Roboto_Regular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/_5sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingEnd="@dimen/_5sdp"
                        android:text="@string/add_wallet_balance"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:textStyle="normal|bold" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <in.forpay.customfonts.MyTextView_Roboto_Regular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="@dimen/_7sdp"
                            android:paddingTop="14.0dip"
                            android:paddingEnd="@dimen/_7sdp"
                            android:text="₹"
                            android:textColor="@color/green_new"
                            android:textSize="@dimen/_22sdp"
                            android:textStyle="normal" />

                        <in.forpay.customfonts.EditText_Roboto_Regular
                            android:id="@+id/editAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:background="@color/transparent"
                            android:inputType="number"
                            android:maxLength="6"
                            android:paddingLeft="8.299988dip"
                            android:paddingTop="14.0dip"
                            android:textColor="@color/black_txt_Color"
                            android:textSize="25.0sp"
                            android:textStyle="normal" />

                        <ImageView
                            android:id="@+id/imageViewAddFund"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="@dimen/_15sdp"
                            android:background="@drawable/rectangle_orange"
                            android:backgroundTint="@color/green_new"
                            android:padding="@dimen/_5sdp"
                            app:srcCompat="@drawable/ic_forward_arrow"
                            app:tint="@color/white" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1.0dip"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="3.0dip"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:background="#ffececec" />

                    <LinearLayout
                        android:id="@+id/amountTxt"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25.299988dip"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <in.forpay.customfonts.MyTextView_Roboto_Regular
                            android:id="@+id/amount500"
                            android:layout_width="59.69998dip"
                            android:layout_height="23.299988dip"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:background="@drawable/green_more_corner_bg"
                            android:gravity="center_horizontal"
                            android:onClick="@{()->activity.onClickInputAmount(500)}"
                            android:text="500"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10sdp"
                            android:textStyle="normal" />

                        <in.forpay.customfonts.MyTextView_Roboto_Regular
                            android:id="@+id/amount1000"
                            android:layout_width="59.69998dip"
                            android:layout_height="23.299988dip"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:background="@drawable/green_more_corner_bg"
                            android:gravity="center_horizontal"
                            android:onClick="@{()->activity.onClickInputAmount(1000)}"
                            android:text="1000"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10sdp"
                            android:textStyle="normal" />

                        <in.forpay.customfonts.MyTextView_Roboto_Regular
                            android:id="@+id/amount1500"
                            android:layout_width="59.69998dip"
                            android:layout_height="23.299988dip"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:background="@drawable/green_more_corner_bg"
                            android:gravity="center_horizontal"
                            android:onClick="@{()->activity.onClickInputAmount(1500)}"
                            android:text="1500"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10sdp"
                            android:textStyle="normal" />

                        <in.forpay.customfonts.MyTextView_Roboto_Regular
                            android:id="@+id/amount2000"
                            android:layout_width="59.69998dip"
                            android:layout_height="23.299988dip"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:background="@drawable/green_more_corner_bg"
                            android:gravity="center_horizontal"
                            android:onClick="@{()->activity.onClickInputAmount(2000)}"
                            android:text="2000"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10sdp"
                            android:textStyle="normal" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_addFundHistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/txtTransactionDetails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:text="@string/last_transaction_details"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerTransactionDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp" />


                </LinearLayout>


            </LinearLayout>


        </RelativeLayout>


    </LinearLayout>

</layout>


